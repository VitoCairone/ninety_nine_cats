<form action="/cat_rental_requests" method="post">
  <label for="cat_rental_request_cat_id">Cat</label>
  <select name = "cat_rental_request[cat_id]" id="cat_rental_request_cat_id">
    <% @cats.each do |cat| %>
    <option value=<%= cat.id %>><%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label for="cat_rental_request_begin_date">Start Date</label>
  <input type="date" name="cat_rental_request[begin_date]" id="cat_rental_request_begin_date">
  <br>

  <label for="cat_rental_request_end_date">End Date</label>
  <input type="date" name="cat_rental_request[end_date]" id="cat_rental_request_end_date">
  <br>

  <input type="submit" value="make a request">
  <!--database defaults status to 'undecided'-->

</form>